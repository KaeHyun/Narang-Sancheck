<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_margin="30dp"/>




    <ImageButton
        android:id="@+id/homeButton3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_action"
        android:src="@drawable/outline_home_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-4dp"
        />

    <ImageButton
        android:id="@+id/storageButton3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/outline_inbox_24"
        app:layout_constraintStart_toEndOf="@+id/homeButton3"
        app:layout_constraintEnd_toStartOf="@+id/petButton3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_action"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginEnd="-2dp"
        android:layout_marginStart="-2dp"
        />

    <ImageButton
        android:id="@+id/petButton3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_pets_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_action"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>