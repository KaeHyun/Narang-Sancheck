<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/MapView"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapview"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/abc_search_view" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="우리가 함께 달린 시간은 ? "
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/chronometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MapView" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/start_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/start_btn"
        android:elevation="30dp"
        android:text="START"
        app:layout_constraintEnd_toStartOf="@+id/stop_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer" />
    <Button
        android:id="@+id/stop_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/stop_btn"
        android:elevation="30dp"
        android:text="PAUSE"
        app:layout_constraintEnd_toStartOf="@+id/reset_button"
        app:layout_constraintStart_toEndOf="@+id/start_button"
        app:layout_constraintTop_toBottomOf="@+id/chronometer"
        />
    <Button
        android:id="@+id/reset_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/reset_btn"
        android:elevation="30dp"
        android:text="RESET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stop_button"
        app:layout_constraintTop_toBottomOf="@+id/chronometer"
        />
    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="건강 정보 "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />
    <Button
        android:id="@+id/end_run"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/start_btn"
        android:elevation="30dp"
        android:text="산책 끝내기"
        app:layout_constraintTop_toBottomOf="@id/health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/storageButton"
        />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_action"
        app:srcCompat="@drawable/outline_home_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-4dp"
        />

    <ImageButton
        android:id="@+id/storageButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/outline_inbox_24"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintEnd_toStartOf="@+id/petButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_action"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginEnd="-2dp"
        android:layout_marginStart="-2dp"
        />

    <ImageButton
        android:id="@+id/petButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/baseline_pets_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_action"
        app:layout_constraintWidth_percent="0.34"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>